import argparse
import logging

import joblib
import numpy as np

from trashcompactor._base import TerminalConsumer
from trashcompactor.inputs import KmerCountStreamer
from trashcompactor.transformers.feature_filters import ObservedFeatureFilter
from trashcompactor.outputs import KmerCountOutput

def read_training_vocab(flname):
    training_vocab = set()
    with open(flname) as fl:
        for ln in fl:
            training_vocab.add(ln.strip())

    return training_vocab

def parse_args():
    parser = argparse.ArgumentParser()

    parser.add_argument("--input-kmer-counts-fl",
                        type=str,
                        required=True)

    parser.add_argument("--output-kmer-counts-fl",
                        type=str,
                        required=True)

    parser.add_argument("--sample-name",
                        type=str,
                        required=True)

    parser.add_argument("--training-vocab-fl",
                        type=str,
                        required=True)

    return parser.parse_args()

if __name__ == "__main__":
    logging.basicConfig(level=0)
    args = parse_args()

    training_vocab = read_training_vocab(args.training_vocab_fl)

    stream = KmerCountStreamer(args.input_kmer_counts_fl,
                               gzipped=True,
                               sample_names=(args.sample_name,))
    stream = ObservedFeatureFilter(stream, training_vocab)
    # Don't write the header because the merge script
    # will add the header
    stream = KmerCountOutput(stream,
                             args.output_kmer_counts_fl,
                             write_header=False)
    consumer = TerminalConsumer(stream)

    consumer.run()
