import argparse
import random

import numpy as np

def read_sample_labels(flname):
    groups = dict()
    with open(flname) as fl:
        for ln in fl:
            cols = ln.strip().split(",")
            groups[cols[0]] = cols[1:]
    return groups

def write_sample_labels(flname, groups):
    with open(flname, "w") as fl:
        for name, samples in groups.items():
            fl.write(name)
            fl.write(",")
            fl.write(",".join(samples))
            fl.write("\n")

def parse_args():
    parser = argparse.ArgumentParser()

    parser.add_argument("--input-labels",
                        type=str,
                        required=True)

    parser.add_argument("--group1-labels",
                        type=str,
                        required=True)

    parser.add_argument("--group2-labels",
                        type=str,
                        required=True)

    return parser.parse_args()

if __name__ == "__main__":
    args = parse_args()

    sample_labels = read_sample_labels(args.input_labels)

    group1_labels = dict()
    group2_labels = dict()

    for group_name, samples in sample_labels.items():
        cutoff = int(0.5 * len(samples))
        group1_labels[group_name] = samples[:cutoff]
        group2_labels[group_name] = samples[cutoff:]

    write_sample_labels(args.group1_labels, group1_labels)
    write_sample_labels(args.group2_labels, group2_labels)
